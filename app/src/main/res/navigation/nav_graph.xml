<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.divneblessing_v0.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <!-- NEW: action to God Category -->
        <action
            android:id="@+id/action_homeFragment_to_godCategoryFragment"
            app:destination="@id/godCategoryFragment" />
    </fragment>

    <!-- NEW: God Category screen -->
    <fragment
        android:id="@+id/godCategoryFragment"
        android:name="com.example.divneblessing_v0.ui.god.GodCategoryFragment"
        android:label="Songs"
        tools:layout="@layout/fragment_god_category" />

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.divneblessing_v0.ui.favorites.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.divneblessing_v0.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/counterFragment"
        android:name="com.example.divneblessing_v0.ui.counter.CounterFragment"
        android:label="Counter"
        tools:layout="@layout/fragment_counter" />

    <fragment
        android:id="@+id/songPlayerFragment"
        android:name="com.example.divneblessing_v0.ui.player.SongPlayerFragment"
        android:label="Player"
        tools:layout="@layout/fragment_song_player" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.divneblessing_v0.ui.profile.ProfileFragment"
        android:label="User Settings"
        tools:layout="@layout/fragment_profile" />
</navigation>
