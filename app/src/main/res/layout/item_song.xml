<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_tile_dark"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/song_title"
        android:layout_width="286dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="1. Vishnu sahasranama stotram"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/btn_like"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_btn_accent_round"
        app:srcCompat="@drawable/ic_heart_24"
        app:tint="@android:color/white"
        android:contentDescription="@string/nav_favorites" />

    <ImageButton
        android:id="@+id/btn_play"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_btn_accent_round"
        app:srcCompat="@drawable/ic_play_24"
        app:tint="@android:color/white"
        android:contentDescription="@string/app_name" />
</LinearLayout>
